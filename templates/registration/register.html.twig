{% extends 'base.html.twig' %}

{% block title %}RH Conseil - Créer un compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

        {% block javascripts %}
            {{ parent() }}
        {% endblock %}

{% block body %}
    <div id="new-account-page">

        <div class="form-container">
            <h1>Créer un compte</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.role) }}
            <div class="form-inputs-register">
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
                <button type="submit" class="btn btn-new-account">Créer un compte</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
